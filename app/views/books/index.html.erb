<div class="container">
  <div class="messages">

    <% if @new_book.errors.any? %>
      <%= @new_book.errors.count %>errors prohibited this obj from being saved:

      <ul>
        <% @new_book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>

    <% end %>
  </div>

  <div class="row">
    <div class="col-md-3">

      <%= render partial: 'common', locals: { user: @user, new_book: @new_book } %>

    </div>

    <div class="col-md-8">

      <h2>Books</h2>

      <table class="table table-hover table-inverse">

        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>

      </table>

    </div>

  </div>
</div>
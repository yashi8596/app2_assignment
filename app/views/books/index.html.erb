<div>

  <div>
    <h2>User info</h2>


    <table>
      <tbody>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>

        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>

        <% if @user == current_user %>
          <p><%= link_to 'EDIT', edit_user_path(@user) %></p>
        <% end %>

      </tbody>
    </table>

    <h2>New book</h2>

    <%= form_with model: @new_book, url: books_path, method: :post do |f| %>

      <label>Title</label><br>
      <p><%= f.text_field :title %></p>

      <label>Opinion</label><br>
      <p><%= f.text_area :body %></p>

      <p><%= f.submit 'Create Book' %></p>
    <% end %>

  </div>


  <div class="row">

    <h2>Books</h2>

    <table class="table table-hover table-inverse">

      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>

    </table>

  </div>

</div>
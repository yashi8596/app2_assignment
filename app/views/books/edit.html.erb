<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>

      <div class="messages">

        <% if @book.errors.any? %>
          <%= @book.errors.count %>errors prohibited this obj from being saved:

          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>

        <% end %>
      </div>

      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

        <div class="form-group">
          <label>Title</label><br>
          <p><%= f.text_field :title, class: "form-control" %></p>
        </div>

        <div class="form-group">
          <label>Opinion</label><br>
          <p><%= f.text_area :body, class: "form-control" %></p>
        </div>

        <div class="form-group">
          <p><%= f.submit 'Update Book', class: "btn btn-success" %></p>
        </div>

      <% end %>

      <div><%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', books_path %></div>
    </div>
  </div>
</div>



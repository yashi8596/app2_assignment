<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

 <label>Title</label><br>
    <p><%= f.text_field :title %></p>

  <label>Opinion</label><br>
    <p><%= f.text_area :opinion %></p>

  <p><%= f.submit 'Update Book' %></p>
<% end %>

<div><%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', books_path %></div>
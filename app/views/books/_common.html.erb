  <div class="userinfo">
    <h2>User info</h2>
    <p><%= image_tag user.get_profile_image(100, 100) %></p>

    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>

        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>

      </tbody>
    </table>
  </div>

  <div class="edit">
      <% if user == current_user %>

        <%= link_to edit_user_path(user) do %>

          <button type="button" class="btn btn-outline-secondary btn-block"><i class="fa-solid fa-user-gear"></i></button>

        <% end %>

      <% end %>
  </div>



  <div>
    <h2 class="mt-3">New book</h2>

    <%= form_with model: @new_book, url: books_path, method: :post do |f| %>

      <div class="title">
        <label>title</label><br>
        <p class="col-xl-12"><%= f.text_field :title %></p>
      </div>

    <% end %>
  </div>





  <div class="userinfo">
    <h2>User info</h2>
    <p><%= image_tag user.get_profile_image(100, 100) %></p>

    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>

        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>

      </tbody>
    </table>
  </div>

  <div class="edit">
    <%= link_to edit_user_path(user) do %>

      <button type="button" class="btn btn-outline-secondary btn-block"><i class="fas fa-user-cog"></i></button>

    <% end %>
  </div>



  <div>
    <h2 class="mt-3">New book</h2>

    <%= form_with model: new_book, local: true, url: books_path, method: :post do |f| %>

      <div class="form-group">
        <label>Title</label><br>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <label>Opinion</label><br>
        <%= f.text_area :body, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Create Book", class: "btn btn-success" %>
      </div>

    <% end %>
  </div>





<h2>User info</h2>

<%= form_with model: @user do |f| %>

  <label for="inputName">Name</label>
  <p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %></p>

  <label for="inputImage">ProfileImage</label>
  <p><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>

  <label>Introduction</label>
  <p><%= f.text_area :introduction %></p>

  <%= f.submit "Update User", class: "btn btn-secondary" %>

<% end %>
<div class="container px-5 px-sm-0">
  
  <div class="col-md-3">

    <%= render partial: 'books/common', locals: { user: @user, new_book: @new_book } %>

  </div>
  
  <div class="col-md-8 offset-md-1">

    <h2>Books</h2>

    <table class="table table-hover table-inverse">

      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>

    </table>

  </div>
</div>

